<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoEcommerce.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoEcommerce.Client"
    xmlns:desktop="clr-namespace:DemoEcommerce.Client.Views.Desktop"
    xmlns:phone="clr-namespace:DemoEcommerce.Client.Views.Phone"
    Shell.FlyoutBehavior="Flyout"
    Title="DemoEcommerce.Client">

    <ShellContent
        Title="Home"
        ContentTemplate="{OnIdiom Desktop={DataTemplate desktop:DesktopHomePage}, Phone={DataTemplate phone:PhoneHomePage}}"
        Route="MainPage" />

     <!-- flyout menu -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Add Product"
                        Icon="addproduct.jpg"
                        ContentTemplate="{DataTemplate desktop:AddProductPage}" />
        <!--<ShellContent Title="Dogs"
                        Icon="dog.png"
                        ContentTemplate="{DataTemplate views:ProductDetailPage}" />-->
    </FlyoutItem>


</Shell>
